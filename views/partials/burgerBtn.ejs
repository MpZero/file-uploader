<div class="relative inline-block text-left">
  <button
    id="burgerBtn"
    class="p-2 rounded-md bg-stone-700 hover:bg-stone-600 transition-all duration-200 focus:outline-none cursor-pointer">    <div class="w-5 h-0.5 bg-white mb-1"></div>
    <div class="w-5 h-0.5 bg-white mb-1"></div>
    <div class="w-5 h-0.5 bg-white"></div>
  </button>
  <div
    id="burgerMenu"
    class="hidden absolute right-0 mt-2 w-40 bg-stone-800 border border-stone-700 rounded-md shadow-lg z-50">
    <ul class="flex flex-col text-left text-white font-mono">
      <li class="hover:bg-stone-700 p-2 cursor-pointer">
        Profile (coming soon)
      </li>
      <li class="hover:bg-stone-700 p-2 cursor-pointer">
        Settings (coming soon)
      </li>
      <li class="hover:bg-stone-700 p-2 cursor-pointer">
        <a href="/log-out" class="block w-full">Log out</a>
      </li>
    </ul>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("burgerBtn");
    const menu = document.getElementById("burgerMenu");

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });

    document.addEventListener("click", (e) => {
      if (!btn.contains(e.target) && !menu.contains(e.target)) {
        menu.classList.add("hidden");
      }
    });
  });
</script>
